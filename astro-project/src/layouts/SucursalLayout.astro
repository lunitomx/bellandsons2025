---
interface Props {
	title: string;
	description: string;
	sucursalName: string;
	address: string;
	mapSrc: string;
	mapLink: string;
    canonical: string;
    ogImage: string;
}

const { title, description, sucursalName, address, mapSrc, mapLink, canonical, ogImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="es-MX" prefix="og: https://ogp.me/ns#">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title}>
    <meta name="description" content={description}>
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
    <link rel="canonical" href={canonical}>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="local_business">
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:url" content={canonical}>
    <meta property="og:site_name" content="Bell & Sons">
    <meta property="og:image" content={ogImage}>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,400;0,9..144,500;0,9..144,600;0,9..144,700;1,9..144,400&family=Plus+Jakarta+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400;1,500&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <slot name="head" />

    <style>
        :root {
            --brand-dark-brown: #2a2118;
            --brand-light-brown: #f8f5f2;
            --brand-accent: #b9976f;
            --brand-green: #2e7d32;
            --white: #ffffff;
            --text-color: #333333;
            --font-heading: 'Playfair Display', serif;
            --font-body: 'Montserrat', sans-serif;
        }

        body {
            margin: 0;
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--brand-light-brown);
            color: var(--text-color);
        }

        .section {
            padding: 50px 20px;
            text-align: center;
        }
        
        .section.dark {
            background-color: var(--brand-dark-brown);
            color: var(--white);
        }

        .container {
            width: 90%;
            max-width: 1100px;
            margin: 0 auto;
        }

        h1, h2 {
            font-family: 'Fraunces', serif;
            font-weight: 700;
        }
        
        h1 {
            font-size: clamp(2.2rem, 5vw, 3rem);
            color: var(--brand-dark-brown);
        }

        h2 {
             font-size: clamp(1.8rem, 4vw, 2.5rem);
        }
        
        .dark h1, .dark h2, .dark p {
            color: var(--white);
        }

        .button {
            display: inline-block;
            padding: 15px 30px;
            margin-top: 20px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: bold;
            font-size: 1.1rem;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .button:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .button-green {
            background-color: var(--brand-green);
            color: var(--white);
        }
        
        .button i {
            margin-left: 10px;
        }

        /* Header & Hero */
        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://res.cloudinary.com/ditbeukyz/image/upload/w_1800,f_auto/hvaldmligws9kbaf2kcl.jpg') no-repeat center center/cover;
            padding: 60px 20px;
        }

        .hero img {
            max-width: 350px;
            margin: 0 auto;
        }

        /* Catalog Section */
        #catalog h1 {
            color: var(--brand-dark-brown);
        }

        /* Social Media */
        .social-icons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        .social-icons a {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 50px;
            height: 50px;
            background-color: var(--brand-dark-brown);
            color: var(--white);
            border-radius: 50%;
            font-size: 1.5rem;
            text-decoration: none;
            transition: background-color 0.3s;
        }
        .social-icons a:hover {
            background-color: var(--brand-accent);
        }

        /* Gallery */
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 30px;
        }
        .gallery-grid img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        /* Footer */
        .footer-address {
            font-size: 1.1rem;
            line-height: 1.7;
            margin-bottom: 30px;
        }
        
        /* Map Container */
        .map-container {
            position: relative;
            overflow: hidden;
            width: 100%;
            max-width: 800px;
            margin: 0 auto 30px auto; /* Centers map and adds space below */
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }

        .map-container iframe {
            width: 100%;
            height: 450px; /* Fixed height for the map */
            border: 0;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <img src="http://bellandsons.ahuehuetedigital.com/cuidadoslambrin/logoblancotransparente.png" alt="Logo Bell & Sons">
        </div>
    </section>

    <!-- Catalog Section -->
    <section id="catalog" class="section">
        <div class="container">
            <h1>Descarga nuestro cat√°logo aqu√≠</h1>
            <a href="https://heyzine.com/flip-book/288d86d021.html" target="_blank" class="button button-green">
                <strong>Descargar Cat√°logo</strong>
            </a>
        </div>
    </section>
    
    <!-- Social Media Section -->
    <section id="social" class="section" style="background-color: #f0e9e2;">
        <div class="container">
            <h2 style="color: var(--brand-dark-brown);">S√≠guenos en redes sociales</h2>
            <div class="social-icons">
                <a href="https://www.facebook.com/bellandsons.mx/" target="_blank" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="https://www.instagram.com/bellandsons.mx/" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </section>

    <!-- Gallery Section -->
    <section id="gallery" class="section">
        <div class="container">
            <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_300,f_auto/xqsp3rnuzjqhnnscyg4u.png" alt="Nuestros Productos" style="max-width: 250px; margin: 0 auto 40px;">
            <div class="gallery-grid">
                <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_600,f_auto/fwexbgiue9pyaygpffou.jpg" alt="Galer√≠a de imagen 1">
                <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_600,f_auto/hvaldmligws9kbaf2kcl.jpg" alt="Galer√≠a de imagen 2">
                <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_600,f_auto/ayzkg6qu6bd0hlxed5xi.jpg" alt="Galer√≠a de imagen 3">
                <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_600,f_auto/qplloyipy3z3r507mpxr.jpg" alt="Galer√≠a de imagen 4">
                <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_600,f_auto/laoypx0qxnj7twzu29zg.jpg" alt="Galer√≠a de imagen 5">
                <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_600,f_auto/jh4xm1l3bhyfed27kpc5.jpg" alt="Galer√≠a de imagen 6">
                <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_600,f_auto/t1gfdpzi5erskufb58na.jpg" alt="Galer√≠a de imagen 7">
                <img src="https://res.cloudinary.com/ditbeukyz/image/upload/w_600,f_auto/wuypwynunyr2ja03t6gq.jpg" alt="Galer√≠a de imagen 8">
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section dark">
        <div class="container">
            <h2>¬øTienes alguna inquietud?</h2>
            <a href="http://qr.ahuehuetedigital.com/whatsappbands" target="_blank" class="button button-green">
                <strong>Contactar a Gerencia</strong><i class="fab fa-whatsapp"></i>
            </a>
        </div>
    </section>

    <!-- Footer Section with Address and Map -->
    <footer class="section dark">
        <div class="container">
            <h2>üìç{sucursalName}</h2>
            <p class="footer-address" set:html={address}></p>
            
            <!-- Embedded Google Map -->
            <div class="map-container">
                <iframe src={mapSrc} allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <a href={mapLink} target="_blank" class="button button-green">
                <strong>Abrir en Maps</strong><i class="fas fa-map-marker-alt"></i>
            </a>
        </div>
    </footer>
</body>
</html>
